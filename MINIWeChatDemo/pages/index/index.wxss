/* pages/index/index.wxss */

/* 在最外层的page，即页面 */
page {
  height: 100%;
  background: #8ED145;
}

/* 整体布局——图片文字竖直排列并居中 */
.indexContainer {
  display: flex;
  flex-direction: column; 
  align-items: center;
}

/* 头像 */
.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin: 100rpx 0;
}

/* 用户名 */
.userName {
  font-size: 32rpx;
  font-weight: bold;
  margin: 100rpx 0;
}

/* 开启小程序view */
.goStudy {
  width: 230rpx;
  height: 80rpx;
  font-size: 28rpx;
  border: 1rpx solid #999;
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
}
