/* pages/detail/detail.wxss */

/* 整体的布局 */
.detailContainer {
  display: flex;
  flex-direction: column;
}

/* 最顶部的图片 */
.headImg {
  width: 100%;
  height: 460rpx;
}

/* 头像和日期 */
.avatar_date {
  padding: 10rpx;
}
.avatar_date image {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.avatar_date text {
  font-size: 32rpx;
  margin-left: 10rpx;
}

/* 标题 */
.detailTitle {
  font-size: 40rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

/* 收藏分享的整体 */
.collection_share_container {
  position: relative;
}
.collection_share {
  float: right;
  margin-right: 50rpx;
}
/* 收藏和分享img */
.collection_share image{
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}

/* 收藏分享的横线 */
.line {
  width: 90%;
  height: 1rpx;
  background: #eee;
  position: absolute;
  top: 45rpx;
  left: 5%;
  z-index: -1;
}

button {
  width: 300rpx;
  height: 100rpx;
  margin-top: 20rpx;
}

/* 文章内容 */
.content {
  margin-top: 20rpx;
  margin-bottom: 50rpx;
  font-size: 32rpx;
  text-indent: 64rpx;
}

/* 音乐图标 */
.musicImg {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 200rpx;
  left: 50%;
  margin-left: -30rpx;

}